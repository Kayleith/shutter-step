<div class="profile-picture">
  <button id="follow">Follow</button>
  <img src="<%= user.escape("original_image_url")%>" />
</div>

<div class="modal">
  <div class="modal-screen-profile js-modal-close">
    <% if(user.id === ShutterStep.currentUser.id) { %>
      <form class="sendup-avatar-image">
        <input type="file" name="user[avatar]" id="input-avatar-image">
        <button id="input-user-avatar">Change Profile Picture</button>
      </form>
    <% } %>
    <img src="<%= user.escape("original_image_url")%>" alt="" />
  </div>
</div>

<div class="profile-info">
  <h1><%= user.escape("first_name") %> <%= user.escape("last_name") %></h1>
  <h2>Username: <%= user.escape("username") %></h2>
  <h2>Birthday: <%= user.escape("birthday") %></h2>
  <h2>Sex     : <%= user.escape("sex") %></h2>
</div>

<ul class="profile-nav">
  <li>
    <label class="menu-item">Favorited Photos</label>
  </li>
</ul>
